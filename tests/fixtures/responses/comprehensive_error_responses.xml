<!-- Collection of comprehensive error response examples for testing -->

<!-- Authentication Failure (Error 502) -->
<GovTalkMessage xmlns="http://www.govtalk.gov.uk/CM/envelope" 
               SchemaLocation="http://www.govtalk.gov.uk/CM/envelope envelope-v2-0.xsd">
  <EnvelopeVersion>2.0</EnvelopeVersion>
  <Header>
    <MessageDetails>
      <Class>HMRC-CH-DEV</Class>
      <Qualifier>error</Qualifier>
      <Function>submit</Function>
      <TransactionID>T000001</TransactionID>
      <CorrelationID>C000001</CorrelationID>
      <Transformation>XML</Transformation>
      <GatewayTest>1</GatewayTest>
    </MessageDetails>
    <SenderDetails>
      <IDAuthentication>
        <SenderID>TESTID</SenderID>
        <Authentication>
          <Method>MD5</Method>
          <Value>9c5c9c5c9c5c9c5c9c5c9c5c9c5c9c5c</Value>
        </Authentication>
      </IDAuthentication>
    </SenderDetails>
  </Header>
  <GovTalkDetails>
    <GovTalkErrors>
      <Error>
        <RaisedBy>GovTalk</RaisedBy>
        <Number>502</Number>
        <Type>fatal</Type>
        <Text>Authentication failure</Text>
        <Location>GovTalk/Header/SenderDetails/IDAuthentication</Location>
      </Error>
    </GovTalkErrors>
  </GovTalkDetails>
  <Body>
    <ErrorResponse xmlns="http://www.govtalk.gov.uk/schemas/govtalk/govtalkheader">
      <ErrorDescription>Invalid authentication credentials provided</ErrorDescription>
    </ErrorResponse>
  </Body>
</GovTalkMessage>

